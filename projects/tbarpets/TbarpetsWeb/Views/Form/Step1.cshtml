@{
    ViewData["Title"] = "Step1";
}

<div class="text-center-off">
    <h1 class="display-4">Your Information</h1>
    <div class="row">
        <div class="col-8">
            <h2>Image here</h2>
        </div>
        <div class="col-4">
            <form TbarpetsWeb asp-controller="Form" asp-action="Step2">
                <div class="mb-3">
                    <input type="hidden" class="form-control" id="email" name="email" value="@ViewData["email"]">
                    <!-- firstname -->
                    <label for="firstname" class="form-label">First name</label>
                    <input type="text" class="form-control" id="firstname" name="firstname" value="@ViewData["firstname"]"  required data-val-required="First name is required" aria-describedby="firstnameHelp">
                    <div id="firstnameHelp" class="form-text">Your given name</div>
                    <!--//  firstname -->

                    <!-- middle name -->
                    <label for="middlename" class="form-label">Middle name</label>
                    <input type="text" class="form-control" id="middlename" name="middlename" value="@ViewData["middlename"]" aria-describedby="middlenameHelp">
                    <div id="middlenameHelp" class="form-text">Your middle name</div>
                    <!--// middle name -->

                    <!-- middle name -->
                    <label for="lastname" class="form-label">Middle name</label>
                    <input type="text" class="form-control" id="lastname" name="lastname" value="@ViewData["lastname"]" data-val-required="Last name is required" aria-describedby="lastnameHelp">
                    <div id="lastnameHelp" class="form-text">Your last name</div>
                    <!--// middle name -->
                </div>
                    <button type="submit" class="btn btn-primary">Next >></button>
            </form>
        </div>
    </div>
</div>
